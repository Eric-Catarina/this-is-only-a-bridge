    [Header("Configura√ß√£o da Mina")]
    [Tooltip("Tag do objeto que pode ativar a mina. Certifique-se que seu carro tenha esta tag.")]
    [SerializeField] private string playerTag = "Player";
    
    [Tooltip("Velocidade m√°xima em Km/h para passar em seguran√ßa.")]
    [SerializeField] private float safeSpeedKmh = 5f;

    [Header("Efeitos da Explos√£o")]
    [Tooltip("A for√ßa do impulso aplicado ao objeto na explos√£o.")]
    [SerializeField] private float explosionForce = 700f;

    [Tooltip("O raio da explos√£o. Afeta Rigidbodies dentro desta √°rea.")]
    [SerializeField] private float explosionRadius = 5f;

    [Tooltip("Modificador que adiciona uma for√ßa vertical para lan√ßar o objeto para cima.")]
    [SerializeField] private float upwardsModifier = 2.0f;

    [Header("Feedback Visual e Sonoro (Opcional)")]
    [Tooltip("Prefab do sistema de part√≠culas para instanciar na explos√£o.")]
    [SerializeField] private GameObject explosionVFX;
    
    [Tooltip("Som da explos√£o.")]
    [SerializeField] private AudioClip explosionSFX;

    private bool hasExploded = false;

    private void Awake()
    {
        GetComponent<Collider>().isTrigger = true;
    }

    private void OnTriggerEnter(Collider other)
    {
        if (hasExploded || !other.CompareTag(playerTag))
        {
            return;
        }

        Rigidbody targetRigidbody = other.GetComponent<Rigidbody>();
        if (targetRigidbody == null)
        {
            Debug.LogWarning("O objeto com a tag 'Player' n√£o possui Rigidbody. A mina n√£o pode funcionar.", other);
            return;
        }

        float speedMps = targetRigidbody.linearVelocity.magnitude;
        float speedKmh = speedMps * 3.6f;

        if (speedKmh >= safeSpeedKmh)
        {
            Detonate(targetRigidbody);
        }
    }

    private void OnTriggerStay(Collider other)
    {
        OnTriggerEnter(other);
    }

    private void Detonate(Rigidbody target)
    {
        hasExploded = true;
        
        target.AddExplosionForce(explosionForce, transform.position, explosionRadius, upwardsModifier, ForceMode.Impulse);

        if (explosionVFX != null)
        {
            Instantiate(explosionVFX, transform.position, Quaternion.identity);
        }
        
        if (explosionSFX != null)
        {
            AudioSource.PlayClipAtPoint(explosionSFX, transform.position);
        }

        Destroy(gameObject);
    }
}
